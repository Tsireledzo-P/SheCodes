    <script>
        function talkToUs() {
            let name = prompt("Hi, What is your name ?");
            let area = prompt("Are you currently in Cape Town?");

            if (area === "No") {
                alert(name + " " + "Come tour the city and taste our delicious burgersüòâ.");
            }
            else {
                alert("Try a burger at The Dogs Bollocks");
            }
        }

        let button = document.querySelector("button");
        button.addEventListener("click", talkToUs);
    </script>

